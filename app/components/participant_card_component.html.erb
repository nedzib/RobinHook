<div class="p-3 w-72" data-controller="user-selection" data-user-selection-participant-name-value="<%= participant.name %>">
  <div class="bg-white p-4 rounded-lg shadow-md h-full flex flex-col justify-between" data-user-selection-target="icon">
    <div class="flex items-center">
      <div class="relative flex-shrink-0" data-action="click->user-selection#selectUser">
        <img src="<%= avatar_url %>" alt="<%= participant.name %>" class="h-14 w-14 rounded-full shadow-sm cursor-pointer" />
        <% if participant.available %>
          <span class="absolute bottom-0 right-0 block h-3 w-3 rounded-full bg-green-500 ring-2 ring-white"></span>
        <% else %>
          <span class="absolute bottom-0 right-0 block h-3 w-3 rounded-full bg-red-500 ring-2 ring-white"></span>
        <% end %>
      </div>

      <%# subgroup select removed from here and rendered at the end of the row so it appears right-aligned %>

      <div class="ml-4 flex-1">
        <div class="flex items-center">
          <div class="font-semibold text-gray-900 text-lg"><%= participant.name %></div>
          <i class="nf nf-fa-check text-green-500 ml-2 selected-check hidden" aria-hidden="true"></i>
        </div>
        <div class="mt-1">
          <%= button_to round_participant_path(round, participant, available: !participant.available, public_view: public_view.to_s), method: :patch, class: "text-sm p-0 bg-transparent border-0 underline #{participant.available ? 'text-green-500' : 'text-red-500'}" do %>
            <%= participant.available ? 'Disponible' : 'No disponible' %>
          <% end %>
        </div>
      </div>

      <%# subgroup select moved down below the CONTEO block (rendered later) %>
    </div>

    <div class="mt-4">
      <div class="bg-gray-50 rounded-xl flex items-center justify-between px-3 py-2">
        <div class="text-xs text-gray-400 uppercase tracking-wide font-medium">CONTEO</div>
        <div class="flex text-xs items-center space-x-3">
          <%= button_to round_participant_path(round, participant, decrement: true, public_view: public_view.to_s), method: :patch, class: "w-9 h-9 flex items-center justify-center bg-white border border-gray-200 rounded-md text-gray-600 hover:bg-gray-100" do %>
            <i class="nf nf-fa-minus"></i>
          <% end %>
          <div class=" text-lg font-semibold"><%= render partial: "count", locals: { participant: participant } %></div>
          <%= button_to round_participant_path(round, participant, increment: true, public_view: public_view.to_s), method: :patch, class: "w-9 h-9 flex items-center justify-center bg-white border border-gray-200 rounded-md text-gray-600 hover:bg-gray-100" do %>
            <i class="nf nf-fa-plus"></i>
          <% end %>
        </div>
      </div>
    </div>

    <% unless public_view %>
      <div class="mt-3">
        <div class="w-full flex justify-center">
          <div class="inline-block relative w-40">
            <select
              id="subgroupSelect<%= participant.id %>"
              class="w-full rounded-md border border-gray-300 shadow-sm pl-3 pr-8 py-1 bg-white text-sm font-medium text-gray-700 focus:outline-none focus:ring-1 focus:ring-blue-500 appearance-none"
              onchange="moveToSubgroup(this, <%= participant.id %>, <%= round.id %>)"
            >
              <option value="">Asignar</option>
              <% round.subgroups.each do |sg| %>
                <option value="<%= sg.id %>" <%= 'selected' if participant.subgroup_id == sg.id %>><%= sg.name %></option>
              <% end %>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
              <i class="nf nf-fa-chevron-down h-4 w-4"></i>
            </div>
          </div>
        </div>

        <form
          id="moveForm<%= participant.id %>"
          action="<%= round_participant_path(round, participant) %>"
          method="post"
          style="display: none;"
        >
          <input type="hidden" name="_method" value="patch">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" id="subgroup_id<%= participant.id %>" name="subgroup_id" value="">
        </form>
      </div>
    <% end %>
  </div>
</div>

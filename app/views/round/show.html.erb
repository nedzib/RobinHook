<div
  class="container mx-auto p-4 min-h-screen flex flex-col"
  data-controller="modal-manager"
>
  <%= turbo_stream_from "count" %>
  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <div class="mb-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold"><%= @round.name %>
          -
          <%= @round.hash_id %></h2>
        <div class="flex space-x-2">
          <!-- Botón de muestreo global (disponible en vista pública) -->
          <button
            type="button"
            data-action="click->modal-manager#open"
            data-modal-target="#globalSamplingModal"
            class="
              px-5 py-3 bg-purple-600 text-white rounded-full hover:bg-purple-700
              focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-opacity-50
              inline-flex items-center space-x-2
            "
          >
            <i class="nf nf-cod-wand"></i>
            <span class="font-medium">Muestreo Global</span>
          </button>

          <% unless @public_view %>
            <!-- Botón para resetear contadores (solo en vista privada) -->
            <%= button_to reset_round_counters_path(@round), method: :post, data: { turbo_confirm: "¿Estás seguro de que deseas resetear todos los contadores a cero?" }, class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 inline-flex items-center" do %>
              <i class="nf nf-fa-refresh mr-2"></i>
              Resetear
            <% end %>

            <%= link_to rounds_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center" do %>
              <i class="nf nf-fa-arrow_left mr-2"></i>
              Volver
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-6">
        <div>
          <div class="space-y-2">
            <% if @round.web_hook.present? && !@public_view %>
              <p>
                <span class="font-medium">Webhook URL:</span>
                <span class="text-gray-600 break-all"><%= @round.web_hook %></span>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- Sección de subgrupos -->
    <div class="border-gray-200 pt-6 mb-8">
      <div class="flex justify-between items-center mb-4 flex-col">
        <% unless @public_view %>
          <div data-controller="form-toggle" class='w-full'>
            <div class="flex flex-row justify-between w-full items-center">
              <h3 class="text-xl font-semibold">subgrupos</h3>
              <div data-form-toggle-target="button">
                <button
                  data-action="click->form-toggle#toggle"
                  class="
                    px-4 py-2 m-4 bg-purple-600 text-white rounded-md hover:bg-purple-700
                    focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-opacity-50
                    inline-flex items-center
                  "
                >
                  <i class="nf nf-fa-plus mr-2"></i>
                  Agregar subgrupo
                </button>
              </div>
            </div>
            <!-- Formulario para agregar subgrupo (inicialmente oculto) -->
            <div data-form-toggle-target="form">
              <div class="bg-gray-50 p-4 rounded-md mb-6 mt-4">
                <h4 class="text-lg font-medium mb-3">Agregar nuevo subgrupo</h4>
                <form
                  action="<%= round_subgroups_path(@round) %>"
                  method="post"
                  class="space-y-4"
                >
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <div class="flex items-center space-x-4">
                    <div class="flex-grow">
                      <label for="subgroup_name" class="sr-only">Nombre</label>
                      <input
                        type="text"
                        name="subgroup[name]"
                        id="subgroup_name"
                        class="
                          block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500
                          focus:ring focus:ring-blue-500 focus:ring-opacity-50
                        "
                        placeholder="Nombre del subgrupo"
                        required
                      >
                    </div>
                    <div class="flex space-x-2">
                      <button
                        type="submit"
                        class="
                          px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none
                          focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center
                        "
                      >
                        <i class="nf nf-fa-check h-5 w-5 mr-2"></i>
                      </button>
                      <button
                        type="button"
                        data-action="click->form-toggle#cancel"
                        class="
                          px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50
                          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50
                          inline-flex items-center
                        "
                      >
                        <i class="nf nf-fa-times h-5 w-5 mr-2"></i>
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Listado de subgrupos -->
        <% if @round.subgroups.any? %>
          <div class="flex flex-wrap">
            <% @round.subgroups.each do |subgroup| %>
              <div class="bg-white p-4 rounded-lg shadow border border-gray-200 m-4">
                <div class="flex justify-between items-center mb-2 flex-row">
                  <h4 class="font-medium text-lg"><%= subgroup.name %></h4>
                  <div class="flex space-x-2">
                    <!-- Botón para abrir el modal de muestreo (disponible en
                    vista pública) -->
                    <button
                      type="button"
                      data-action="click->modal-manager#open"
                      data-modal-target="#samplingModal<%= subgroup.id %>"
                      data-subgroup-id="<%= subgroup.id %>"
                      class="
                        ml-6 text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer
                      "
                    >
                      <i class="nf nf-cod-wand text-2xl"></i>
                    </button>

                    <% unless @public_view %>
                      <!-- Botón para eliminar el subgrupo (solo en vista
                      privada) -->
                      <%= button_to round_subgroup_path(@round, subgroup), method: :delete, data: { turbo_confirm: "¿Estás seguro de que deseas eliminar este subgrupo?" }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 cursor-pointer" do %>
                        <i class="nf nf-fa-trash text-sm"></i>
                      <% end %>
                    <% end %>
                  </div>
                </div>

                <% participants = Participant.where(subgroup_id: subgroup.id) %>
                <% if participants.any? %>
                  <div class="flex flex-wrap -m-3">
                    <% participants.sort_by(&:name).each do |participant| %>
                      <%= render ParticipantCardComponent.new(participant: participant, round: @round, public_view: @public_view) %>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-gray-500 text-sm">No hay participantes en este subgrupo.</p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
        <% end %>
      </div>

      <div class="border-gray-200 pt-6">
        <div class="flex justify-between mb-4 flex-col">
          <% unless @public_view %>
            <div data-controller="form-toggle">
              <div class="flex flex-row justify-between w-full items-center">
                <h3 class="text-xl font-semibold self-center">Participantes</h3>
                <div data-form-toggle-target="button" class="flex justify-self-center">
                  <button
                    data-action="click->form-toggle#toggle"
                    class="
                      px-4 py-2 m-4 bg-green-600 text-white rounded-md hover:bg-green-700
                      focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50
                      inline-flex items-center
                    "
                  >
                    <i class="nf nf-fa-plus h-5 w-5 mr-2"></i>
                    Agregar participante
                  </button>
                </div>
              </div>
              <!-- Formulario para agregar participante (inicialmente oculto)
              -->
              <div data-form-toggle-target="form">
                <div class="bg-gray-50 p-4 rounded-md mb-6 mt-4">
                  <h4 class="text-lg font-medium mb-3">Agregar nuevo participante</h4>
                  <%= form_with(model: [@round, Participant.new], local: true, class: "space-y-4") do |f| %>
                    <div class="flex items-center space-x-4">
                      <div class="flex-grow">
                        <%= f.label :name, "Nombre", class: "sr-only" %>
                        <%= f.text_field :name,
                                     class:
                                       "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                                     placeholder: "Nombre del participante" %>
                      </div>
                      <div class="flex-grow">
                        <%= f.label :google_user_id, "Google User ID", class: "sr-only" %>
                        <%= f.text_field :google_user_id,
                                     class:
                                       "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                                     placeholder: "Google User ID" %>
                      </div>
                      <div class="flex space-x-2">
                        <button
                          type="submit"
                          class="
                            px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none
                            focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center
                          "
                        >
                          <i class="nf nf-fa-check h-5 w-5 mr-2"></i>
                        </button>
                        <button
                          type="button"
                          data-action="click->form-toggle#cancel"
                          class="
                            px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50
                            focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50
                            inline-flex items-center
                          "
                        >
                          <i class="nf nf-fa-times h-5 w-5 mr-2"></i>
                        </button>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div> 
          <% end %>
          <% if @round.participants.any? %>
            <%# Participants without subgroup: render as cards like subgroup participants %>
            <% ungrouped = @round.participants.select { |p| p.subgroup_id.nil? || p.subgroup_id.to_i == 0 } %>
            <% if ungrouped.any? %>
              <div class="mb-6">
                <h4 class="text-lg font-semibold mb-3">Participantes sin subgrupo</h4>
                <div class="flex flex-wrap -m-3">
                  <% ungrouped.sort_by(&:name).each do |participant| %>
                    <%= render ParticipantCardComponent.new(participant: participant, round: @round, public_view: @public_view) %>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Participants table removed: cards are used for participant display -->
          <% else %>
            <p class="text-gray-500">No hay participantes en esta ronda.</p>
          <% end %>
        </div>

        <% unless @public_view %>
          <script>
            // Función para mover un participante a un subgrupo
            function moveToSubgroup(selectElement, participantId, roundId) {
              const subgroupId = selectElement.value;
              if (subgroupId) {
                // Establecer el valor del subgrupo seleccionado en el formulario
                document.getElementById('subgroup_id' + participantId).value = subgroupId;
                // Enviar el formulario
                document.getElementById('moveForm' + participantId).submit();
              }
            }
          </script>
        <% end %>
      </div>
      <!-- Modales para muestreo round robin -->
      <% @round.subgroups.each do |subgroup| %>
        <div
          id="samplingModal<%= subgroup.id %>"
          class="
            sampling-modal hidden fixed inset-0 overflow-y-auto h-full w-full z-50
          "
          style="background-color: rgba(75, 85, 99, 0.5);"
          data-action="click->modal-manager#closeOnBackdrop"
        >
          <div
            class="
              relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white
            "
          >
            <div class="mt-3 text-center">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Seleccionar participante</h3>
              <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500">
                  Se seleccionará aleatoriamente un participante del subgrupo
                  <strong><%= subgroup.name %></strong>
                  con el menor conteo.
                </p>

                <%= form_with(url: round_subgroup_samplings_path(@round, subgroup), method: :post, data: { remote: true, controller: "sampling" }, class: "mt-4") do |f| %>
                  <%= hidden_field_tag :public_view, @public_view.to_s %>
                  <%= hidden_field_tag :current_user_name,
                  "",
                  id: "current_user_name_subgroup_#{subgroup.id}" %>
                  <div class="mb-4">
                    <%= f.label :pr_url,
                            "URL del PR",
                            class: "block text-sm font-medium text-gray-700 text-left" %>
                    <%= f.url_field :pr_url,
                                class:
                                  "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                                placeholder: "https://github.com/usuario/repo/pull/123",
                                required: true %>
                  </div>

                  <div class="flex items-center justify-between mt-4">
                    <button
                      type="button"
                      data-action="click->modal-manager#close"
                      class="
                        px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300
                        focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50
                      "
                    >
                      Cancelar
                    </button>
                    <%= f.submit "Seleccionar",
                             class:
                               "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Modal para muestreo global -->
      <div
        id="globalSamplingModal"
        class="
          sampling-modal hidden fixed inset-0 overflow-y-auto h-full w-full z-50
        "
        style="background-color: rgba(75, 85, 99, 0.5);"
        data-action="click->modal-manager#closeOnBackdrop"
      >
        <div
          class="
            relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white
          "
        >
          <div class="mt-3 text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Muestreo Global</h3>
            <div class="mt-2 px-7 py-3">
              <p class="text-sm text-gray-500">
                Se seleccionará aleatoriamente un participante de todos los
                subgrupos con el menor conteo.
              </p>

              <%= form_with(url: round_global_samplings_path(@round), method: :post, data: { remote: true, controller: "sampling" }, class: "mt-4") do |f| %>
                <%= hidden_field_tag :public_view, @public_view.to_s %>
                <%= hidden_field_tag :current_user_name, "", id: "current_user_name_global" %>
                <div class="mb-4">
                  <%= f.label :pr_url,
                          "URL del PR",
                          class: "block text-sm font-medium text-gray-700 text-left" %>
                  <%= f.url_field :pr_url,
                              class:
                                "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                              placeholder: "https://github.com/usuario/repo/pull/123",
                              required: true %>
                </div>

                <div class="flex items-center justify-between mt-4">
                  <button
                    type="button"
                    data-action="click->modal-manager#close"
                    class="
                      px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300
                      focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50
                    "
                  >
                    Cancelar
                  </button>
                  <%= f.submit "Seleccionar",
                           class:
                             "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- Alerta de selección de usuario -->
      <%= render "shared/user_selection_alert" %>
    </div>

<div
  class="container mx-auto p-4 min-h-screen flex flex-col"
  data-controller="modal-manager"
>
  <%= turbo_stream_from "count" %>
  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <div class="mb-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold"><%= @round.name %>
          -
          <%= @round.hash_id %></h2>
        <div class="flex space-x-2">
          <!-- Botón de muestreo global (disponible en vista pública) -->
          <button
            type="button"
            data-action="click->modal-manager#open"
            data-modal-target="#globalSamplingModal"
            class="
              px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700
              focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50
              inline-flex items-center
            "
          >
            <i class="nf nf-cod-wand mr-2"></i>
            Muestreo Global
          </button>

          <% unless @public_view %>
            <!-- Botón para resetear contadores (solo en vista privada) -->
            <%= button_to reset_round_counters_path(@round), method: :post, data: { turbo_confirm: "¿Estás seguro de que deseas resetear todos los contadores a cero?" }, class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 inline-flex items-center" do %>
              <i class="nf nf-fa-refresh mr-2"></i>
              Resetear
            <% end %>

            <%= link_to rounds_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center" do %>
              <i class="nf nf-fa-arrow_left mr-2"></i>
              Volver
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-6">
        <div>
          <div class="space-y-2">
            <% if @round.web_hook.present? && !@public_view %>
              <p>
                <span class="font-medium">Webhook URL:</span>
                <span class="text-gray-600 break-all"><%= @round.web_hook %></span>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- Sección de subgrupos -->
    <div class="border-t border-gray-200 pt-6 mb-8">
      <div class="flex justify-between items-center mb-4 flex-col">
        <% unless @public_view %>
          <div data-controller="form-toggle" class='w-full'>
            <div class="flex flex-row justify-between w-full items-center">
              <h3 class="text-xl font-semibold">Equipos</h3>
              <div data-form-toggle-target="button">
                <button
                  data-action="click->form-toggle#toggle"
                  class="
                    px-4 py-2 m-4 bg-purple-600 text-white rounded-md hover:bg-purple-700
                    focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-opacity-50
                    inline-flex items-center
                  "
                >
                  <i class="nf nf-fa-plus mr-2"></i>
                  Agregar equipo
                </button>
              </div>
            </div>
            <!-- Formulario para agregar subgrupo (inicialmente oculto) -->
            <div data-form-toggle-target="form">
              <div class="bg-gray-50 p-4 rounded-md mb-6 mt-4">
                <h4 class="text-lg font-medium mb-3">Agregar nuevo equipo</h4>
                <form
                  action="<%= round_subgroups_path(@round) %>"
                  method="post"
                  class="space-y-4"
                >
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <div class="flex items-center space-x-4">
                    <div class="flex-grow">
                      <label for="subgroup_name" class="sr-only">Nombre</label>
                      <input
                        type="text"
                        name="subgroup[name]"
                        id="subgroup_name"
                        class="
                          block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500
                          focus:ring focus:ring-blue-500 focus:ring-opacity-50
                        "
                        placeholder="Nombre del equipo"
                        required
                      >
                    </div>
                    <div class="flex space-x-2">
                      <button
                        type="submit"
                        class="
                          px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none
                          focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center
                        "
                      >
                        <i class="nf nf-fa-check h-5 w-5 mr-2"></i>
                      </button>
                      <button
                        type="button"
                        data-action="click->form-toggle#cancel"
                        class="
                          px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50
                          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50
                          inline-flex items-center
                        "
                      >
                        <i class="nf nf-fa-times h-5 w-5 mr-2"></i>
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Listado de subgrupos -->
        <% if @round.subgroups.any? %>
          <div class="flex flex-wrap">
            <% @round.subgroups.each do |subgroup| %>
              <div class="bg-white p-4 rounded-lg shadow border border-gray-200 m-4">
                <div class="flex justify-between items-center mb-2 flex-row">
                  <h4 class="font-medium text-lg"><%= subgroup.name %></h4>
                  <div class="flex space-x-2">
                    <!-- Botón para abrir el modal de muestreo (disponible en
                    vista pública) -->
                    <button
                      type="button"
                      data-action="click->modal-manager#open"
                      data-modal-target="#samplingModal<%= subgroup.id %>"
                      data-subgroup-id="<%= subgroup.id %>"
                      class="
                        ml-6 text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer
                      "
                    >
                      <i class="nf nf-cod-wand text-2xl"></i>
                    </button>

                    <% unless @public_view %>
                      <!-- Botón para eliminar el equipo (solo en vista
                      privada) -->
                      <%= button_to round_subgroup_path(@round, subgroup), method: :delete, data: { turbo_confirm: "¿Estás seguro de que deseas eliminar este equipo?" }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 cursor-pointer" do %>
                        <i class="nf nf-fa-trash text-sm"></i>
                      <% end %>
                    <% end %>
                  </div>
                </div>

                <% participants = Participant.where(subgroup_id: subgroup.id) %>
                <% if participants.any? %>
                  <ul class="divide-y divide-gray-200">
                    <% participants.sort_by(&:name).each do |participant| %>
                      <li class="py-2 flex justify-between items-center">
                        <div class="flex items-center">
                          <%= button_to round_participant_path(@round, participant, available: !participant.available, public_view: @public_view.to_s), method: :patch, class: "mr-2" do %>
                            <%= render partial: "available", locals: { participant: participant } %>
                          <% end %>
                          <div
                            data-controller="user-selection"
                            data-user-selection-participant-name-value="<%= participant.name %>"
                            class="flex items-center"
                          >
                            <span
                              data-user-selection-target="icon"
                              data-action="click->user-selection#selectUser"
                              class="
                                cursor-pointer mr-1 inline-flex items-center justify-center
                              "
                            >
                              <i class="nf nf-fa-user h-5 w-5" style="color: #9ca3af;"></i>
                            </span>
                            <span class="text-gray-900" data-participant-id="<%= participant.id %>"><%= participant.name %></span>
                          </div>
                        </div>
                        <div class="flex items-center ml-6 space-x-1">
                          <%= button_to round_participant_path(@round, participant, decrement: true, public_view: @public_view.to_s), method: :patch, class: "text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer" do %>
                            <i class="nf nf-fa-minus h-4 w-4"></i>
                          <% end %>
                          <span class="px-2 py-1 bg-gray-100 rounded-md text-xs font-medium">
                            <%= render partial: "count", locals: { participant: participant } %>
                          </span>
                          <%= button_to round_participant_path(@round, participant, increment: true, public_view: @public_view.to_s), method: :patch, class: "text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer" do %>
                            <i class="nf nf-fa-plus h-4 w-4"></i>
                          <% end %>
                        </div>
                        <% unless @public_view %>
                          <div class="flex items-center space-x-2">
                            <form
                              action="<%= round_participant_path(@round, participant) %>"
                              method="post"
                              class="inline"
                            >
                              <input type="hidden" name="_method" value="patch">
                              <input
                                type="hidden"
                                name="authenticity_token"
                                value="<%= form_authenticity_token %>"
                              >
                              <input type="hidden" name="subgroup_id" value="0">
                              <button
                                type="submit"
                                class="
                                  text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer text-xs
                                  inline-flex items-center
                                "
                              >
                                <i class="nf nf-fa-sign_out text-base ml-4"></i>
                              </button>
                            </form>
                          </div>
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <p class="text-gray-500 text-sm">No hay participantes en este equipo.</p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No hay equipos disponibles.</p>
        <% end %>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <div class="flex justify-between mb-4 flex-col">
          <% unless @public_view %>
            <div data-controller="form-toggle">
              <div class="flex flex-row justify-between w-full items-center">
                <h3 class="text-xl font-semibold self-center">Participantes</h3>
                <div data-form-toggle-target="button" class="flex justify-self-center">
                  <button
                    data-action="click->form-toggle#toggle"
                    class="
                      px-4 py-2 m-4 bg-green-600 text-white rounded-md hover:bg-green-700
                      focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50
                      inline-flex items-center
                    "
                  >
                    <i class="nf nf-fa-plus h-5 w-5 mr-2"></i>
                    Agregar participante
                  </button>
                </div>
              </div>
              <!-- Formulario para agregar participante (inicialmente oculto)
              -->
              <div data-form-toggle-target="form">
                <div class="bg-gray-50 p-4 rounded-md mb-6 mt-4">
                  <h4 class="text-lg font-medium mb-3">Agregar nuevo participante</h4>
                  <%= form_with(model: [@round, Participant.new], local: true, class: "space-y-4") do |f| %>
                    <div class="flex items-center space-x-4">
                      <div class="flex-grow">
                        <%= f.label :name, "Nombre", class: "sr-only" %>
                        <%= f.text_field :name,
                                     class:
                                       "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                                     placeholder: "Nombre del participante" %>
                      </div>
                      <div class="flex-grow">
                        <%= f.label :google_user_id, "Google User ID", class: "sr-only" %>
                        <%= f.text_field :google_user_id,
                                     class:
                                       "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                                     placeholder: "Google User ID" %>
                      </div>
                      <div class="flex space-x-2">
                        <button
                          type="submit"
                          class="
                            px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none
                            focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center
                          "
                        >
                          <i class="nf nf-fa-check h-5 w-5 mr-2"></i>
                        </button>
                        <button
                          type="button"
                          data-action="click->form-toggle#cancel"
                          class="
                            px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50
                            focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50
                            inline-flex items-center
                          "
                        >
                          <i class="nf nf-fa-times h-5 w-5 mr-2"></i>
                        </button>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          <% if @round.participants.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th
                      scope="col"
                      class="
                        px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider
                      "
                    >Disponibilidad</th>
                    <th
                      scope="col"
                      class="
                        px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider
                      "
                    >Nombre</th>
                    <th
                      scope="col"
                      class="
                        px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider
                      "
                    >Conteo</th>
                    <% unless @public_view %>
                      <th
                        scope="col"
                        class="
                          px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider
                        "
                      >ID de Google</th>
                      <th
                        scope="col"
                        class="
                          px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider
                        "
                      >Acciones</th>
                    <% end %>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @round.participants.each do |participant| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <%= button_to round_participant_path(@round, participant, available: !participant.available, public_view: @public_view.to_s), method: :patch do %>
                          <%= render partial: "available", locals: { participant: participant } %>
                        <% end %>
                      </td>
                      <td
                        class="
                          px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900
                        "
                        data-participant-id="<%= participant.id %>"
                      >
                        <div
                          data-controller="user-selection"
                          data-user-selection-participant-name-value="<%= participant.name %>"
                          class="flex items-center"
                        >
                          <span
                            data-user-selection-target="icon"
                            data-action="click->user-selection#selectUser"
                            class="
                              cursor-pointer mr-2 inline-flex items-center justify-center
                            "
                          >
                            <i class="nf nf-fa-user h-5 w-5" style="color: #9ca3af;"></i>
                          </span>
                          <span><%= participant.name %></span>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <div class="flex items-center space-x-2">
                          <%= button_to round_participant_path(@round, participant, decrement: true, public_view: @public_view.to_s), method: :patch, class: "text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer" do %>
                            <i class="nf nf-fa-minus h-5 w-5"></i>
                          <% end %>
                          <span class="px-3 py-1 bg-gray-100 rounded-md font-medium">
                            <%= render partial: "count", locals: { participant: participant } %>
                          </span>
                          <%= button_to round_participant_path(@round, participant, increment: true, public_view: @public_view.to_s), method: :patch, class: "text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer" do %>
                            <i class="nf nf-fa-plus h-5 w-5"></i>
                          <% end %>
                        </div>
                      </td>
                      <% unless @public_view %>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          <%= participant.google_user_id %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                          <div class="flex items-center space-x-2">
                            <% if @round.subgroups.any? %>
                              <div class="inline-block relative">
                                <div class="flex items-center">
                                  <i
                                    class="
                                      nf nf-fa-user_pen h-5 w-5 text-gray-500 absolute left-2 pointer-events-none
                                    "
                                  ></i>
                                  <select
                                    id="subgroupSelect<%= participant.id %>"
                                    class="
                                      rounded-md border border-gray-300 shadow-sm pl-8 pr-3 py-1 bg-white text-sm
                                      font-medium text-gray-700 focus:outline-none focus:ring-1 focus:ring-blue-500
                                      appearance-none
                                    "
                                    onchange="moveToSubgroup(this, <%= participant.id %>, <%= @round.id %>)"
                                  >
                                    <option value="">Mover</option>
                                    <% @round.subgroups.each do |subgroup| %>
                                      <option value="<%= subgroup.id %>"><%= subgroup.name %></option>
                                    <% end %>
                                  </select>
                                  <div
                                    class="
                                      pointer-events-none absolute inset-y-0 right-0 flex items-center px-2
                                      text-gray-700
                                    "
                                  >
                                    <i class="nf nf-fa-chevron-down h-4 w-4"></i>
                                  </div>
                                </div>

                                <form
                                  id="moveForm<%= participant.id %>"
                                  action="<%= round_participant_path(@round, participant) %>"
                                  method="post"
                                  style="display: none;"
                                >
                                  <input type="hidden" name="_method" value="patch">
                                  <input
                                    type="hidden"
                                    name="authenticity_token"
                                    value="<%= form_authenticity_token %>"
                                  >
                                  <input
                                    type="hidden"
                                    id="subgroup_id<%= participant.id %>"
                                    name="subgroup_id"
                                    value=""
                                  >
                                </form>
                              </div>
                            <% end %>
                            <%= link_to edit_round_participant_path(@round, participant), class: "text-blue-600 hover:text-blue-900 bg-transparent border-0 cursor-pointer inline-flex items-center mr-2" do %>
                              <i class="nf nf-fa-edit h-5 w-5 mr-1"></i>
                            <% end %>
                            <%= button_to round_participant_path(@round, participant), method: :delete, data: { turbo_confirm: "¿Estás seguro de que deseas eliminar este participante?" }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 cursor-pointer inline-flex items-center" do %>
                              <i class="nf nf-fa-trash h-5 w-5 mr-1"></i>
                            <% end %>
                          </div>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-gray-500">No hay participantes en esta ronda.</p>
          <% end %>
        </div>

        <% unless @public_view %>
          <script>
            // Función para mover un participante a un subgrupo
            function moveToSubgroup(selectElement, participantId, roundId) {
              const subgroupId = selectElement.value;
              if (subgroupId) {
                // Establecer el valor del subgrupo seleccionado en el formulario
                document.getElementById('subgroup_id' + participantId).value = subgroupId;
                // Enviar el formulario
                document.getElementById('moveForm' + participantId).submit();
              }
            }
          </script>
        <% end %>
      </div>
      <!-- Modales para muestreo round robin -->
      <% @round.subgroups.each do |subgroup| %>
        <div
          id="samplingModal<%= subgroup.id %>"
          class="
            sampling-modal hidden fixed inset-0 overflow-y-auto h-full w-full z-50
          "
          style="background-color: rgba(75, 85, 99, 0.5);"
          data-action="click->modal-manager#closeOnBackdrop"
        >
          <div
            class="
              relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white
            "
          >
            <div class="mt-3 text-center">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Seleccionar participante</h3>
              <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500">
                  Se seleccionará aleatoriamente un participante del equipo
                  <strong><%= subgroup.name %></strong>
                  con el menor conteo.
                </p>

                <%= form_with(url: round_subgroup_samplings_path(@round, subgroup), method: :post, data: { remote: true, controller: "sampling" }, class: "mt-4") do |f| %>
                  <%= hidden_field_tag :public_view, @public_view.to_s %>
                  <%= hidden_field_tag :current_user_name,
                  "",
                  id: "current_user_name_subgroup_#{subgroup.id}" %>
                  <div class="mb-4">
                    <%= f.label :pr_url,
                            "URL del PR",
                            class: "block text-sm font-medium text-gray-700 text-left" %>
                    <%= f.url_field :pr_url,
                                class:
                                  "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                                placeholder: "https://github.com/usuario/repo/pull/123",
                                required: true %>
                  </div>

                  <div class="flex items-center justify-between mt-4">
                    <button
                      type="button"
                      data-action="click->modal-manager#close"
                      class="
                        px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300
                        focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50
                      "
                    >
                      Cancelar
                    </button>
                    <%= f.submit "Seleccionar",
                             class:
                               "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Modal para muestreo global -->
      <div
        id="globalSamplingModal"
        class="
          sampling-modal hidden fixed inset-0 overflow-y-auto h-full w-full z-50
        "
        style="background-color: rgba(75, 85, 99, 0.5);"
        data-action="click->modal-manager#closeOnBackdrop"
      >
        <div
          class="
            relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white
          "
        >
          <div class="mt-3 text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Muestreo Global</h3>
            <div class="mt-2 px-7 py-3">
              <p class="text-sm text-gray-500">
                Se seleccionará aleatoriamente un participante de todos los
                equipos con el menor conteo.
              </p>

              <%= form_with(url: round_global_samplings_path(@round), method: :post, data: { remote: true, controller: "sampling" }, class: "mt-4") do |f| %>
                <%= hidden_field_tag :public_view, @public_view.to_s %>
                <%= hidden_field_tag :current_user_name, "", id: "current_user_name_global" %>
                <div class="mb-4">
                  <%= f.label :pr_url,
                          "URL del PR",
                          class: "block text-sm font-medium text-gray-700 text-left" %>
                  <%= f.url_field :pr_url,
                              class:
                                "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50",
                              placeholder: "https://github.com/usuario/repo/pull/123",
                              required: true %>
                </div>

                <div class="flex items-center justify-between mt-4">
                  <button
                    type="button"
                    data-action="click->modal-manager#close"
                    class="
                      px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300
                      focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50
                    "
                  >
                    Cancelar
                  </button>
                  <%= f.submit "Seleccionar",
                           class:
                             "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
                </div>
              <% end %>
            </div>
          </div>

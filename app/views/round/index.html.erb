<div class="container mx-auto p-4 min-h-screen flex flex-col">
  <h1 class="font-bold text-4xl mb-6">Gestión de Rondas</h1>

  <div class="mb-8 flex justify-end">
    <%= link_to "Nueva Ronda", new_round_path, class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
  </div>

  <!-- Listado de rondas -->
  <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">Rondas existentes</h2>
    
    <% if @rounds.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Webhook</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @rounds.each do |round| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= round.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= round.web_hook.present? ? truncate(round.web_hook, length: 30) : "No configurado" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "Ver", round_path(round), class: "text-blue-600 hover:text-blue-900 mr-2" %>
                  <%= link_to "URL Pública", rounds_public_path(hash_id: round.hash_id), class: "text-green-600 hover:text-green-900 mr-2" %>
                  <%= link_to "Editar", edit_round_path(round), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
                  <%= link_to "Eliminar", round_path(round), method: :delete, data: { confirm: "¿Estás seguro de que deseas eliminar esta ronda?" }, class: "text-red-600 hover:text-red-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">No hay rondas disponibles. Crea una nueva para comenzar.</p>
    <% end %>
    
    <div class="mt-6">
      <%= link_to "Nueva Ronda", new_round_path, class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
    </div>
  </div>
</div>

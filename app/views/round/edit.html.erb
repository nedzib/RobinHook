<div class="container mx-auto p-4 min-h-screen flex flex-col">
  <h1 class="font-bold text-4xl mb-6">Editar</h1>

  <!-- Formulario para editar ronda -->
  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <%= form_with(model: @round, local: true, class: "space-y-4") do |f| %>
      <% if @round.errors.any? %>
        <div class="bg-red-50 p-4 rounded-md mb-4">
          <h2 class="text-red-800 font-medium"><%= pluralize(@round.errors.count, "error") %> impidieron guardar esta ronda:</h2>
          <ul class="list-disc pl-5 mt-2">
            <% @round.errors.full_messages.each do |message| %>
              <li class="text-red-700"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div>
        <%= f.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
      </div>
      
      <div>
        <%= f.label :web_hook, "URL de Webhook", class: "block text-sm font-medium text-gray-700" %>
        <%= f.url_field :web_hook, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", placeholder: "https://ejemplo.com/webhook" %>
        <p class="mt-1 text-xs text-gray-500">URL que recibir√° notificaciones cuando haya cambios en esta ronda.</p>
      </div>
      
      <div class="mt-6 flex items-center justify-between">
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Actualizar
        </button>
        <%= link_to rounds_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 inline-flex items-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          Cancelar
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="flex flex-col">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-8 rounded shadow" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-sm text-gray-700" %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
</div>
